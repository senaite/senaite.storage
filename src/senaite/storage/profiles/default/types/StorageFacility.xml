<?xml version="1.0"?>
<object name="StorageFacility"
        meta_type="Factory-based Type Information with dynamic views"
        i18n:domain="senaite.storage"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        purge="True">

  <!-- Basic metadata -->
  <property name="title" i18n:translate="">Storage Facility</property>
  <property name="content_icon">++resource++senaite.storage.static/img/facility.png</property>
  <property name="content_meta_type">StorageFacility</property>
  <property name="product">senaite.storage</property>
  <property name="factory">addStorageFacility</property>
  <property name="global_allow">False</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
    <element value="StorageContainer"/>
  </property>
  <property name="allow_discussion">False</property>

  <!-- View information -->
  <property name="default_view_fallback">True</property>

  <!-- Method aliases -->
  <alias from="(Default)" to="folder_view"/>
  <alias from="edit" to="base_edit"/>
  <alias from="view" to="base_view"/>

  <!-- Actions -->
  <action title="View"
          action_id="view"
          category="object"
          condition_expr=""
          url_expr="string:${object_url}/view"
          i18n:attributes="title"
          i18n:domain="plone"
          visible="True">
    <permission value="View"/>
  </action>

  <action title="Edit"
          action_id="edit"
          category="object"
          condition_expr=""
          url_expr="string:${object_url}/edit"
          i18n:attributes="title"
          i18n:domain="plone"
          visible="True">
    <permission value="Modify portal content"/>
  </action>

  <action title="Containers"
          action_id="folder_view"
          category="object"
          condition_expr=""
          url_expr="string:${object_url}"
          i18n:attributes="title"
          i18n:domain="senaite.storage"
          visible="True">
    <permission value="View"/>
  </action>

</object>
